<div class="info"> 
    <%- include('partials/messages') -%>
    <h5>Your info is following</h5>
    <div class="header">
        <table class="table table-responsive" style="color: white;">
            <tr class="bg-dark" >
                    
                <th>Name</th>
                <th>Email</th>
                </tr>
            <tr>
                <td><%= user[0].username %></td>
                <td><%= user[0].email %></td>

            </tr>

        </table>
    </div>

</div>
<hr>
<div class="changeInfo">
    <h5>Change Your Info</h5>
    <form action="account" method="POST">
        <input type="hidden" name="hiddenUsername" value="<%= user[0].username %>">
        <input type="hidden" name="id" value="<%= user[0]._id %>">
        <input type="text" name="username" value="<%= user[0].username %>" required><br>
        <input type="email" name="email" value="<%= user[0].email %>" required><br>
        <input type="submit" value="Update">
    </form>
</div>
